prefix		= @prefix@
exec_prefix	= ${prefix}

# Name
PRGNAME		= qDecoder

# Static Library Name
LIBNAME		= lib${PRGNAME}.a

# Shared Library Name
SLIBVERSION	= 3
SLIBNAME	= lib${PRGNAME}.so
SLIBREALNAME	= ${SLIBNAME}.${SLIBVERSION}

# System library directory
LIBDIR		= @libdir@
HEADERDIR	= @includedir@

# To Support Database
#WITH_MYSQL	= -DWITH_MYSQL
WITH_MYSQL	=
#MYSQL_INCLUDE	= -I/usr/local/include/mysql
MYSQL_INCLUDE	=

# Which compiler & options for release
CC		= @CC@
CFLAGS		= @CFLAGS@
DEFS		= @DEFS@ ${WITH_MYSQL}
INCLUDE		= -I./ ${MYSQL_INCLUDE}

# Utilities
AR		= @AR@
ARFLAGS		= -rc
CHMOD		= @CHMOD@
INSTALL		= @INSTALL@ -m 444
LD		= @LD@
LDFLAGS		= -G
LN_S		= @LN_S@
RANLIB		= @RANLIB@
RM		= @RM@


# Objects List
OBJ		= qDecoder.o \
		qSession.o \
		qHttpHeader.o \
		qEnv.o \
		qError.o \
		qfDecoder.o \
		qsDecoder.o \
		qEncode.o \
		qString.o \
		qFile.o \
		qValid.o \
		qArg.o \
		qAwk.o \
		qSed.o \
		qCount.o \
		qDownload.o \
		qTime.o \
		qLog.o \
		qSocket.o \
		qDatabase.o \
		qShm.o \
		qSem.o \
		qInternalCommon.o \
		qInternalEntry.o \
		md5/md5c.o

## Make Library
all: ${OBJ}
	${AR} ${ARFLAGS} ${LIBNAME} ${OBJ}
	${RANLIB} ${LIBNAME}
	${LD} ${LDFLAGS} ${OBJ} -o ${SLIBREALNAME}
	${CHMOD} 0644 ${SLIBREALNAME}
	${RM} -f ${SLIBNAME}
	${LN_S} ${SLIBREALNAME} ${SLIBNAME}

## Compile Module
.c.o:
	${CC} ${CFLAGS} ${DEFS} ${INCLUDE} -c -o $@ $<

## Install Module
install: all
	${INSTALL} qDecoder.h ${HEADERDIR}/qDecoder.h
	${INSTALL} ${LIBNAME} ${LIBDIR}/${LIBNAME}
	${INSTALL} ${SLIBREALNAME} ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}
	${LN_S} ${LIBDIR}/${SLIBREALNAME} ${LIBDIR}/${SLIBNAME}

uninstall: deinstall
deinstall:
	${RM} -f ${HEADERDIR}/qDecoder.h
	${RM} -f ${LIBDIR}/${LIBNAME}
	${RM} -f ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}

## Documentation Module
doc:
	doxygen doxygen.conf

cleandoc:
	${RM} -rf ../doc/html ../doc/man

## Clear Module
clean:
	${RM} -f ${OBJ} ${LIBNAME} ${SLIBREALNAME} ${SLIBNAME}
