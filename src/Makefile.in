prefix		= @prefix@
exec_prefix	= ${prefix}

##########################################################################
## Compile time options
##########################################################################

## Web Application(CGI) API
## Influence on : qDecoder.c, qSession.c, qHttpHeader.c qDownload.c qError.c
##
## If you do not use qDecoder for CGI interfacing, uncomment WITHOUT_CGISUPPORT.
## This will disable all CGI interface functions such like qDecoder(),
## qGetValue(), qSession(), qContentType(), qDownload(), qError(), etc...
#WITHOUT_CGISUPPORT	= -DWITHOUT_CGISUPPORT

## Configuration File & String Handling API
## Influence on : qfDecode.cr, qsDecoder.c
#WITHOUT_CONFIGPARSER	= -DWITHOUT_CONFIGPARSER

## Pattern Matching & String Search API
## Influence on : qArg.c
#WITHOUT_ARG	= -DWITHOUT_ARG

## File & String Tokenizing API
## Influence on : qAwk.c
#WITHOUT_AWK	= -DWITHOUT_AWK

## Server Side Include and Variable Replacement API
## Influence on : qSed.c
#WITHOUT_SED	= -DWITHOUT_SED

## IPC(Semaphore, Shared-memory) Support
## Influence on : qSem.c, qShm.c
#WITHOUT_IPC	= -DWITHOUT_IPC

## Socket Support
## Influence on : qSocket.c
#WITHOUT_SOCKET	= -DWITHOUT_SOCKET

## Database Support
## Influence on : qDatabase.c
ifeq (@WITH_MYSQL@, yes)
WITH_MYSQL	= -DWITH_MYSQL
MYSQL_INCLUDE	= -I/usr/local/include/mysql -I /usr/local/mysql/include
endif

## Hash-table Support
## Influence on : qHashtbl.c, qHasharr.c
#WITHOUT_HASHTBL	= -DWITHOUT_HASHTBL

## Obstack Support
## Influence on : qObstack.c
#WITHOUT_OBSTACK	= -DWITHOUT_OBSTACK

## Rotating File Logging API
## Influence on : qLog.c
#WITHOUT_LOG	= -DWITHOUT_LOG

##########################################################################
## YOU DON'T NEED TO MODIFY BELOW BEFORE YOU GOT COMPILE TIME TROUBLES
##########################################################################
OPT_DEFS	= ${WITHOUT_CGISUPPORT}		\
		 ${WITHOUT_CONFIGPARSER}	\
		 ${WITHOUT_ARG}			\
		 ${WITHOUT_AWK}			\
		 ${WITHOUT_SED}			\
		 ${WITHOUT_IPC}			\
		 ${WITHOUT_SOCKET}		\
		 ${WITH_MYSQL}			\
		 ${WITHOUT_HASHTBL}		\
		 ${WITHOUT_LOG}

OPT_INCLUDE	=  ${MYSQL_INCLUDE}

## Name
PRGNAME		= qDecoder

## Static Library Name
LIBNAME		= lib${PRGNAME}.a

## Shared Library Name
SLIBVERSION	= 4
SLIBNAME	= lib${PRGNAME}.so
SLIBREALNAME	= ${SLIBNAME}.${SLIBVERSION}

## System library directory
LIBDIR		= @libdir@
HEADERDIR	= @includedir@

## Which compiler & options for release
#BUILD_DEBUG	= -Wall -g -O0 -DBUILD_DEBUG
ifeq (@ENABLE_X86_64@, yes)
CFLAGS64	= -D_GNU_SOURCE -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64
endif

CC		= @CC@
CFLAGS		= @CFLAGS@  ${CFLAGS64} ${BUILD_DEBUG}
DEFS		= @DEFS@ ${OPT_DEFS}
INCLUDE		= -I./ ${OPT_INCLUDE}

## Utilities
AR		= @AR@
ARFLAGS		= -rc
CHMOD		= @CHMOD@
INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
LD		= @LD@
LDFLAGS		= @LDFLAGS@
LN_S		= @LN_S@
RANLIB		= @RANLIB@
RM		= @RM@

## Objects List
OBJ		= qDecoder.o		\
		qSession.o		\
		qHttpHeader.o		\
		qDownload.o		\
					\
		qfDecoder.o		\
		qsDecoder.o		\
		qArg.o			\
		qAwk.o			\
		qSed.o			\
					\
		qSem.o			\
		qShm.o			\
		qSocket.o		\
		qDatabase.o		\
					\
		qEntry.o		\
		qHashtbl.o		\
		qHasharr.o		\
		qObstack.o		\
					\
		qLog.o			\
					\
		qEnv.o			\
		qEncode.o		\
		qString.o		\
		qFile.o			\
		qValid.o		\
		qCount.o		\
		qTime.o			\
		qError.o		\
					\
		qInternalCommon.o	\
		md5/md5c.o

## Make Library
all: qdecoder

qdecoder: ${OBJ}
	${AR} ${ARFLAGS} ${LIBNAME} ${OBJ}
	${RANLIB} ${LIBNAME}
	${LD} ${LDFLAGS} ${OBJ} -o ${SLIBREALNAME}
	${CHMOD} 0644 ${SLIBREALNAME}
	${RM} -f ${SLIBNAME}
	${LN_S} ${SLIBREALNAME} ${SLIBNAME}

install: all
	${INSTALL_DATA} qDecoder.h ${HEADERDIR}/qDecoder.h
	${INSTALL_DATA} ${LIBNAME} ${LIBDIR}/${LIBNAME}
	${INSTALL_DATA} ${SLIBREALNAME} ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}
	${LN_S} ${LIBDIR}/${SLIBREALNAME} ${LIBDIR}/${SLIBNAME}

deinstall: uninstall
uninstall:
	${RM} -f ${HEADERDIR}/qDecoder.h
	${RM} -f ${LIBDIR}/${LIBNAME}
	${RM} -f ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}

doc:
	doxygen doxygen.conf

cleandoc:
	${RM} -rf ../doc/html ../doc/man

clean:
	${RM} -f ${OBJ} ${LIBNAME} ${SLIBREALNAME} ${SLIBNAME}

## Compile
.c.o:
	${CC} ${CFLAGS} ${DEFS} ${INCLUDE} -c -o $@ $<
