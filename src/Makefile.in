prefix		= @prefix@
exec_prefix	= ${prefix}

##########################################################################
## Compile time options
##########################################################################

## Web Application(CGI) API
## Influence on : qDecoder.c, qSession.c, qHttpHeader.c qDownload.c qError.c
##
## If you do not use qDecoder for CGI interfacing, uncomment DISABLE_CGISUPPORT.
## This will disable all CGI interface functions such like qDecoder(),
## qGetValue(), qSession(), qContentType(), qDownload(), qError(), etc...
#DISABLE_CGISUPPORT	= -DDISABLE_CGISUPPORT

## Configuration File & String Handling API
## Influence on : qfDecode.cr, qsDecoder.c
#DISABLE_CONFIGPARSER	= -DDISABLE_CONFIGPARSER

## Pattern Matching & String Search API
## Influence on : qArg.c
#DISABLE_ARG	= -DDISABLE_ARG

## File & String Tokenizing API
## Influence on : qAwk.c
#DISABLE_AWK	= -DDISABLE_AWK

## Server Side Include and Variable Replacement API
## Influence on : qSed.c
#DISABLE_SED	= -DDISABLE_SED

## IPC(Semaphore, Shared-memory) Support
## Influence on : qSem.c, qShm.c
#DISABLE_IPC	= -DDISABLE_IPC

## Socket Support
## Influence on : qSocket.c
#DISABLE_SOCKET	= -DDISABLE_SOCKET

## Database Support
## Influence on : qDatabase.c
ifeq (@ENABLE_MYSQL@, yes)
ENABLE_MYSQL	= -DENABLE_MYSQL
MYSQL_INCLUDE	= -I/usr/local/include/mysql -I /usr/local/mysql/include
endif

## Hash-table Support
## Influence on : qHashtbl.c, qHasharr.c
#DISABLE_HASHTBL	= -DDISABLE_HASHTBL

## Obstack Support
## Influence on : qObstack.c
#DISABLE_OBSTACK	= -DDISABLE_OBSTACK

## Rotating File Logging API
## Influence on : qLog.c
#DISABLE_LOG	= -DDISABLE_LOG

##########################################################################
## YOU DON'T NEED TO MODIFY BELOW BEFORE YOU GOT COMPILE TIME TROUBLES
##########################################################################
OPT_DEFS	= ${DISABLE_CGISUPPORT}		\
		 ${DISABLE_CONFIGPARSER}	\
		 ${DISABLE_ARG}			\
		 ${DISABLE_AWK}			\
		 ${DISABLE_SED}			\
		 ${DISABLE_IPC}			\
		 ${DISABLE_SOCKET}		\
		 ${ENABLE_MYSQL}			\
		 ${DISABLE_HASHTBL}		\
		 ${DISABLE_LOG}

OPT_INCLUDE	=  ${MYSQL_INCLUDE}

## Name
PRGNAME		= qDecoder

## Static Library Name
LIBNAME		= lib${PRGNAME}.a

## Shared Library Name
SLIBVERSION	= 4
SLIBNAME	= lib${PRGNAME}.so
SLIBREALNAME	= ${SLIBNAME}.${SLIBVERSION}

## System library directory
LIBDIR		= @libdir@
HEADERDIR	= @includedir@

## Which compiler & options for release
CC		= @CC@
CFLAGS		= @CFLAGS@
DEFS		= @DEFS@ @OPT_DEFS@
INCLUDE		= -I./ ${OPT_INCLUDE}

## Utilities
AR		= @AR@
ARFLAGS		= -rc
CHMOD		= @CHMOD@
INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
LD		= @LD@ -G
LDFLAGS		= @LDFLAGS@
LN_S		= @LN_S@
RANLIB		= @RANLIB@
RM		= @RM@

## Objects List
OBJ		= qDecoder.o		\
		qSession.o		\
		qHttpHeader.o		\
		qDownload.o		\
					\
		qfDecoder.o		\
		qsDecoder.o		\
		qArg.o			\
		qAwk.o			\
		qSed.o			\
					\
		qSem.o			\
		qShm.o			\
		qSocket.o		\
		qDatabase.o		\
					\
		qEntry.o		\
		qHashtbl.o		\
		qHasharr.o		\
		qObstack.o		\
					\
		qLog.o			\
					\
		qEnv.o			\
		qEncode.o		\
		qString.o		\
		qFile.o			\
		qValid.o		\
		qCount.o		\
		qTime.o			\
		qError.o		\
					\
		qInternalCommon.o	\
		md5/md5c.o

## Make Library
all: qdecoder

qdecoder: ${OBJ}
	${AR} ${ARFLAGS} ${LIBNAME} ${OBJ}
	${RANLIB} ${LIBNAME}
	${LD} ${LDFLAGS} ${OBJ} -o ${SLIBREALNAME}
	${CHMOD} 0644 ${SLIBREALNAME}
	${RM} -f ${SLIBNAME}
	${LN_S} ${SLIBREALNAME} ${SLIBNAME}

install: all
	${INSTALL_DATA} qDecoder.h ${HEADERDIR}/qDecoder.h
	${INSTALL_DATA} ${LIBNAME} ${LIBDIR}/${LIBNAME}
	${INSTALL_DATA} ${SLIBREALNAME} ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}
	${LN_S} ${LIBDIR}/${SLIBREALNAME} ${LIBDIR}/${SLIBNAME}

deinstall: uninstall
uninstall:
	${RM} -f ${HEADERDIR}/qDecoder.h
	${RM} -f ${LIBDIR}/${LIBNAME}
	${RM} -f ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}

doc:
	doxygen doxygen.conf

cleandoc:
	${RM} -rf ../doc/html ../doc/man

clean:
	${RM} -f ${OBJ} ${LIBNAME} ${SLIBREALNAME} ${SLIBNAME}

## Compile
.c.o:
	${CC} ${CFLAGS} ${DEFS} ${INCLUDE} -c -o $@ $<
