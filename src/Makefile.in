##########################################################################
## Compile time options
##########################################################################
##
## Please use configure script instead modifing Makefile to enable/disable
## feature.
##
## enable MySQL database supports
#ENABLE_MYSQL	= -DENABLE_MYSQL
#MYSQL_INCLUDE	= -I/usr/local/include/mysql -I /usr/local/mysql/include

## disable CGI(web application) related APIs
#DISABLE_CGISUPPORT	= -DDISABLE_CGISUPPORT

## disable configuration file parser & string parser APIs
#DISABLE_CONFIGPARSER	= -DDISABLE_CONFIGPARSER

## disable pattern matching & string search APIs
#DISABLE_ARG	= -DDISABLE_ARG

## disable file & string tokenizing APIs
#DISABLE_AWK	= -DDISABLE_AWK

## disable server side include and variable replacement APIs
#DISABLE_SED	= -DDISABLE_SED

## disable ipc(semaphore, shared-memory) APIs
#DISABLE_IPC	= -DDISABLE_IPC

## disable socket APIs (influence on: qSocket.c)
#DISABLE_SOCKET	= -DDISABLE_SOCKET

## disable hash-table data structure APIs
#DISABLE_HASHTBL	= -DDISABLE_HASHTBL

## disable obstack APIs
#DISABLE_OBSTACK	= -DDISABLE_OBSTACK

## disable file logging APIs
#DISABLE_LOG	= -DDISABLE_LOG

##########################################################################
## YOU DON'T NEED TO MODIFY BELOW BEFORE YOU GOT COMPILE TIME TROUBLES
##########################################################################
prefix		= @prefix@
exec_prefix	= ${prefix}

CUS_DEFS	= ${DISABLE_CGISUPPORT}		\
		 ${DISABLE_CONFIGPARSER}	\
		 ${DISABLE_ARG}			\
		 ${DISABLE_AWK}			\
		 ${DISABLE_SED}			\
		 ${DISABLE_IPC}			\
		 ${DISABLE_SOCKET}		\
		 ${ENABLE_MYSQL}		\
		 ${DISABLE_HASHTBL}		\
		 ${DISABLE_LOG}

CUS_INCS	=  ${MYSQL_INCLUDE}

## Name
PRGNAME		= qDecoder

## Static Library Name
LIBNAME		= lib${PRGNAME}.a

## Shared Library Name
SLIBVERSION	= 4
SLIBNAME	= lib${PRGNAME}.so
SLIBREALNAME	= ${SLIBNAME}.${SLIBVERSION}

## System library directory
LIBDIR		= @libdir@
HEADERDIR	= @includedir@

## Which compiler & options for release
CC		= @CC@
CFLAGS		= @CFLAGS@
DEFS		= @DEFS@ @OPT_DEFS@ ${CUS_DEFS}
INCLUDE		= -I./ @OPT_INCS@  ${CUS_INCS}

## Utilities
AR		= @AR@
ARFLAGS		= -rc
CHMOD		= @CHMOD@
INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
LD		= @LD@
LDFLAGS		= @LDFLAGS@ -G
LN_S		= @LN_S@
RANLIB		= @RANLIB@
RM		= @RM@

## Objects List
OBJ		= qDecoder.o		\
		qSession.o		\
		qHttpHeader.o		\
		qDownload.o		\
					\
		qfDecoder.o		\
		qsDecoder.o		\
		qArg.o			\
		qAwk.o			\
		qSed.o			\
					\
		qSem.o			\
		qShm.o			\
		qSocket.o		\
		qDatabase.o		\
					\
		qEntry.o		\
		qHashtbl.o		\
		qHasharr.o		\
		qObstack.o		\
					\
		qLog.o			\
					\
		qEnv.o			\
		qEncode.o		\
		qString.o		\
		qFile.o			\
		qValid.o		\
		qCount.o		\
		qTime.o			\
		qError.o		\
					\
		qInternalCommon.o	\
		md5/md5c.o

## Make Library
all: qdecoder

qdecoder: ${OBJ}
	${AR} ${ARFLAGS} ${LIBNAME} ${OBJ}
	${RANLIB} ${LIBNAME}
	${LD} ${LDFLAGS} ${OBJ} -o ${SLIBREALNAME}
	${CHMOD} 0644 ${SLIBREALNAME}
	${RM} -f ${SLIBNAME}
	${LN_S} ${SLIBREALNAME} ${SLIBNAME}

install: all
	${INSTALL_DATA} qDecoder.h ${HEADERDIR}/qDecoder.h
	${INSTALL_DATA} ${LIBNAME} ${LIBDIR}/${LIBNAME}
	${INSTALL_DATA} ${SLIBREALNAME} ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}
	${LN_S} ${LIBDIR}/${SLIBREALNAME} ${LIBDIR}/${SLIBNAME}

deinstall: uninstall
uninstall:
	${RM} -f ${HEADERDIR}/qDecoder.h
	${RM} -f ${LIBDIR}/${LIBNAME}
	${RM} -f ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}

doc:
	doxygen doxygen.conf

cleandoc:
	${RM} -rf ../doc/html ../doc/man

clean:
	${RM} -f ${OBJ} ${LIBNAME} ${SLIBREALNAME} ${SLIBNAME}

## Compile
.c.o:
	${CC} ${CFLAGS} ${DEFS} ${INCLUDE} -c -o $@ $<
