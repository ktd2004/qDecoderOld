DIRS	= src examples
RM	= @RM@

all:
	@for DIR in ${DIRS}; do \
		echo "===> $${DIR}"; \
		(cd $${DIR}; make all); \
		echo "<=== $${DIR}"; \
	done

install:
	(cd src/; make install)

deinstall: uninstall
uninstall:
	(cd src/; make deinstall)

clean:
	@for DIR in ${DIRS}; do \
		echo "===> $${DIR}"; \
		(cd $${DIR}; make clean); \
		echo "<=== $${DIR}"; \
	done
	${RM} -f config.cache config.log config.status

distclean: clean
	@for DIR in ${DIRS} .; do \
		echo "===> Removing $${DIR}/Makefile"; \
		(cd $${DIR}; rm -f Makefile); \
	done
